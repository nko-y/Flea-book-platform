/* pages/shareAdministration/shareAdministration.wxss */

page{
  width: 100%;
  height: 100%;
  background-color: whitesmoke;
}

.listItem{
  width: 100%;
}

.topBar{
  width: 100%;
  height: 80rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #D8E1DE;
  color: white;
}

.first{
  width: 26%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.second{
  width: 41%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.third{
  width: 33%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.oneRecord{
  height: 80rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.theBlank{
  width: 1%;
  height: 100%;
  background-color: #D8E1DE;
  margin-left: 1%;
  margin-right: 1%;
}

.theTitle{
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.theDetail{
  width: 40%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.theMinus{
  width: 9%;
  height: 100%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.theNumber{
  width: 6%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.thePlus{
  width: 9%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.theDelete{
  width: 9%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.titleText{
  font-weight: bold;
  font-size: 25rpx;
  width: 100%;
}

.containText{
  font-size: 25rpx;
  width: 100%;
}

.iconStyle{
  width: 60%;
  height: 60%;
}

.numberText{
  font-size: 25rpx;
}