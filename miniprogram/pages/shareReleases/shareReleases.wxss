/* pages/shareReleases/shareReleases.wxss */

.Pic{
  width: 100%;
  height: 525rpx;
  background-color: #E9E9E9;
}

.swipPic{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.dateLine{
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  color: lightgray;
}

.datePic{
  height: 40rpx;
  width: 40rpx;
}

.title{
  display: flex;
  flex-direction: row;
  padding-left: 40rpx;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
  width: 90%;
}

.titleName{
  margin-right: 60rpx;
  font-weight: bold;
}

.titleText{
  color: #444444;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.theNumber{
  width: 60rpx;
  text-align: center;
}

.numberButton{
  width: 50rpx;
  height: 50rpx;
}

.hr{
  border: 1px solid #cccccc;
  opacity: 0.2;
  width: 90%;
  margin:0 auto;
}

.titleTwo{
  padding-left: 40rpx;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
  width: 90%;
}

.textArea{
  color:#444444;
  margin-top:20rpx;
  height:150rpx;
}

.saveButton{
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  background-color: rgb(129, 156, 136);
  color: white;
}

.inPic{
  width: 120rpx;
  height: 120rpx;
}

.none{
  width: 100%;
  height: 100%;
}

.deleteButton{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 50rpx;
  top: 50rpx;
}