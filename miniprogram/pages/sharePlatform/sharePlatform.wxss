/* pages/sharePlatform/sharePlatform.wxss */
page{
  background-color: white;
  width: 100%;
  height: 100%;
}

.stackImg{
  width:55rpx;
  height:55rpx;
  border-radius: 50%;
}

.searchTab{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: whitesmoke;
  z-index: 2000;
}

.pic{
  width: 10%;
  margin-left: 2%;
  margin-right: 2%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.pic2{
  width: 10%;
  margin-left: 2%;
  margin-right: 2%;
}

.search{
  width: 70%;
  height: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
  background-color: white;
}

.search input{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  opacity: 0.5;
}

.search image
{ 
  width:40rpx;
  height:40rpx;
  padding-left:20rpx;
  display: inline-block;
  vertical-align:middle;
  margin-right: 20rpx;
}

open-data[type="userAvatarUrl"]{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}

.emailIcon{
  width: 50rpx;
  height: 50rpx;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 100%;
  width: 450rpx;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 300rpx;
  z-index: 2000;
  background: #EEEEEE;
  box-shadow: 0rpx -2rpx 4rpx grey;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.firstBlock{
  width: 100%;
  height: 25%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: whitesmoke;
  padding-top: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.hideTitle{
  width: 410rpx;
  height: 22%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-weight: bold;
  font-size: 25rpx;
}

.oneLineButton{
  width: 410rpx;
  height: 30%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.oneButtonBox{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.theButton{
  width: 70%;
  height: 70%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  background-color: #E5E5E5;
  border-radius: 30rpx;
}

.secondBlock{
  height: 72%;
  width: 100%;
  background-color: whitesmoke;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.hideTitle2{
  width: 410rpx;
  height: 10%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-weight: bold;
  font-size: 25rpx;
}

.oneLineButton2{
  width: 410rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.oneButtonBox2{
  width: 90%;
  height: 80%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  background-color: #E5E5E5;
  border-radius: 30rpx;
}

.oneButtonBoxSelect{
  width: 90%;
  height: 80%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
