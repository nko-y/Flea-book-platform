/* pages/recommend/recommend.wxss */

page{
  height: 100%;
}

.theLogo{
  height: 40%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.theButton{
  height: 10%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.logoImg{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 1rpx solid rgb(232, 241, 239);
}

.allPage{
  width: 100%;
  height: 100%;
}

.regPage{
  width: 100%;
  height: 100%;
}

.occTabBar{
  height: 110rpx;
}

.searchTab{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: whitesmoke;
}

.pic{
  width: 10%;
  margin-left: 2%;
  margin-right: 2%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.pic2{
  width: 10%;
  margin-left: 2%;
  margin-right: 2%;
}

.search{
  width: 70%;
  height: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
  background-color: white;
}

.search input{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  opacity: 0.5;
}

.search image
{ 
  width:40rpx;
  height:40rpx;
  padding-left:20rpx;
  display: inline-block;
  vertical-align:middle;
  margin-right: 20rpx;
}

open-data[type="userAvatarUrl"]{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}

.unreg{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}

.emailIcon{
  width: 50rpx;
  height: 50rpx;
}

.howmany{
  position: absolute;
  top: 0.2em;
  right: 0.2em;
}

swiper{
  width: 94%;
  height: 30%;
  margin:2% 3%;
}

swiper image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.BookItems{
  width: 48vw;
  height: 450rpx;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
}

.all{
  width: 96vw;
  margin: 0 auto;
  
}
