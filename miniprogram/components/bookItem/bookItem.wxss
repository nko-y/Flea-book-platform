/* components/bookItem/bookItem.wxss */

.bookItem{
  background-color: whitesmoke;
  width: 45vw;
  height: 425rpx;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.itemImage{
  width: 100%;
  height: 70%;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  position: relative;
}

.bkImg{
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  width: 100%;
  height: 100%;
}

.outtime{
  height: 24rpx;
  width: 24rpx;
  margin: 5rpx;
}

.outtime2{
  height: 21.5rpx;
  width: 21.5rpx;
  margin: 5rpx;
}

.outtimeword{
  font-size: 20rpx;
  color: white;
  margin: 5rpx;
  margin-right: 10rpx;
}

.theBack{
  z-index: 500;
  position: absolute;
  top: 85%;
  width: 100%;
  height: 15%;
  background:linear-gradient(rgba(170,170,170,0), rgba(170,170,170,0.4));
  display: flex;
  flex-direction: row;
  align-items: center;
}

.itemDescription{
  width: 90%;
  margin: auto;
  height: 15%;
  font-size: 22rpx;
  font-weight: bold;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.itemlowest{
  width: 90%;
  height: 10%;
  background-color: whitesmoke;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.itemCatagory{
  width: 80%;
  height: 100%;
  font-size: 16rpx;
  font-weight: bold;
  color: #999999;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.itemTime{
  width: 20%;
  height: 100%;
  font-size: 16rpx;
  font-weight: bold;
  color: #999999;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.bl{
  height: 5%;
}

.bropic{
  width: 50%;
  height: 80%;
}