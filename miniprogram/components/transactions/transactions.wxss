.userInfo{
  display:flex;
  flex-direction:row;
  height:120px;
  width:75%;
  border-radius: 40px;
  box-shadow: 0px -1px 2px grey;
  background-color: white;
  margin:50px 0px 0px 20px;
}

.avatar{
  width:30px;
  height:30px;
  border-radius:15px;
  border:2px solid whitesmoke;
  margin:10px;
  margin-left:20px;
}

.userId{
  margin:10px 3px 10px 3px;
}

.userIdText{
  font-size:85%;
  font-weight:bold;
}

.all{
  margin:-60px 0px 0px 20px;
  background-color:white;
  border-radius: 10px;
  width:90%;
  box-shadow: 1px 2px 3px grey;
  display:flex;
  flex-direction: column;

}


.all_{
  position:fixed;
  top:98px;left:10px;
  z-index:-1;
  background-color:whitesmoke;
  border-radius: 10px;
  width:90%;
  height:300px;
  box-shadow: 1px 2px 3px grey;
}

.userInfo_{
  position:fixed;
  top:38px;left:10px;
  z-index:-1;
  height:120px;
  width:75%;
  border-radius: 40px;
  box-shadow: 0px -1px 2px grey;
  background-color: whitesmoke;

}

.bookImg{
  height:150px;
  width:100%;
  border:1px solid blue;
}

.bookInfo{
  
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items: center;
}

.bookTitle{
  padding-top:5px;padding-bottom:3px;
}

.bookTitleText{
  font-weight:bold;
}

.bookAuthorText{
  font-size:80%;

}

.lines{
  width:25%;
  margin-top:8px;
  height:3px;
  border-top:1.6px solid black;
  border-bottom:1.6px solid black;
}

.bookAccount{
  
  margin-left:20px;margin-right:15px;
  margin-top:10px;
}

.bookAccountText{
  font-size:85%;
  color:grey;  
}

.contact{
  border:1px solid purple;
  margin-left: 20px;
  margin-right:20px;
  margin-top:20px;
  margin-bottom:20px;
  height:30px;
}


